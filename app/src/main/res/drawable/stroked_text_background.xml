<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0dip" android:color="@color/icons" />
            <solid android:color="@color/iconsLight" />
            <padding android:left="@dimen/search_view_item_padding" android:top="@dimen/search_view_item_padding" android:right="@dimen/search_view_item_padding" android:bottom="@dimen/search_view_item_padding" />
            <corners android:radius="@dimen/search_view_item_radius" />
        </shape>
    </item>
